@model BlogSimple.Model.ViewModels.AccountViewModels.ResetPasswordViewModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reset Password";
}


<div class="container">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="account-card">
                        <div class="card-header">
                            <h3 class="text-center text-white font-weight-light my-4">Reset Password</h3>
                        </div>
                        <div class="card-body text-white">
                            @if (Model.IsSuccessful)
                            {
                                <div class="alert alert-success" role="alert">
                                    <p>
                                        You have updated your password successfully!
                                    </p>
                                </div>
                            }
                            else
                            {
                                <p>Reset your password now!</p>
                                <form asp-action="ResetPassword">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserId" class="form-control" />
                                    <input type="hidden" asp-for="Token" class="form-control" />
                                    <div class="form-floating mb-3">
                                        <input asp-for="NewPassword" class="form-control" />
                                        <label asp-for="NewPassword" class="text-black"></label>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ConfirmNewPassword" class="form-control" />
                                        <label asp-for="ConfirmNewPassword" class="text-black"></label>
                                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Reset Password" class="hero-btn">
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
