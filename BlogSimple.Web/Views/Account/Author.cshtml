                                </svg>
                                <span class="text-muted fst-italic mb-1"><a href="@Model.AccountUser.TwitterLink">@Model.AccountUser.TwitterLink</a></span>
                            </div>
                        }
                        @if (Model.AccountUser.GitHubLink != null)
                        {
                            <div class="text-left">
