                                </svg>
                                <span class="text-muted fst-italic mb-1"><a href="@Model.AccountUser.GitHubLink">@Model.AccountUser.GitHubLink</a></span>
                            </div>
                        }
                        @if (Model.AccountUser.LinkedInLink != null)
                        {
                            <div class="text-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" viewBox="0 0 48 48" fill="none">
                                    <circle cx="24" cy="24" r="20" fill="#1DA1F2" />
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M36 16.3086C35.1177 16.7006 34.1681 16.9646 33.1722 17.0838C34.1889 16.4742 34.9697 15.5095 35.3368 14.36C34.3865 14.9247 33.3314 15.3335 32.2107 15.5551C31.3123 14.5984 30.0316 14 28.6165 14C25.8975 14 23.6928 16.2047 23.6928 18.9237C23.6928 19.3092 23.7368 19.6852 23.8208 20.046C19.7283 19.8412 16.1005 17.8805 13.6719 14.9015C13.2479 15.6287 13.0055 16.4742 13.0055 17.3766C13.0055 19.0845 13.8735 20.5916 15.1958 21.4747C14.3878 21.4491 13.6295 21.2275 12.9647 20.8587V20.9203C12.9647 23.3066 14.663 25.296 16.9141 25.7496C16.5013 25.8616 16.0661 25.9224 15.6174 25.9224C15.2998 25.9224 14.991 25.8912 14.6902 25.8336C15.3166 27.7895 17.1357 29.2134 19.2899 29.2534C17.6052 30.5733 15.4822 31.3612 13.1751 31.3612C12.7767 31.3612 12.3848 31.338 12 31.2916C14.1791 32.6884 16.7669 33.5043 19.5475 33.5043C28.6037 33.5043 33.5562 26.0016 33.5562 19.4956C33.5562 19.282 33.5522 19.0693 33.5418 18.8589C34.5049 18.1629 35.34 17.2958 36 16.3086Z" fill="white" />
                                </svg>
                                <span class="text-muted fst-italic mb-1"><a href="@Model.AccountUser.LinkedInLink">@Model.AccountUser.LinkedInLink</a></span>
                            </div>
                        }
                    </div>
                    <br />
                    <h3>@Model.AccountUser.Heading</h3>
                    @*<figure class="mb-4">
                        <img class="blog-details-img" src="data:image/jpg;base64,@Convert.ToBase64String(Model.AccountUser.HeaderImage)" alt="@Model.AccountUser.UserName Bio Image">
                    </figure>*@

                    <figure class="mb-4">
                        <img class="blog-details-img" src="data:image/jpg;base64,@Convert.ToBase64String(Model.AccountUser.ProfilePicture)" alt="@Model.AccountUser.UserName Bio Image">
                    </figure>
                </header>
                <!-- Preview image figure-->
                <!-- Post content-->
                <section class="mb-5">
                    <div class="card-body text-left">
                        @Html.Raw(Model.AccountUser.Bio)
                    </div>
                </section>
            </article>
        </div>
        <!-- Side widgets-->
        <div class="widget-col">
            <!-- Posts by Author -->
            @{
                if (Model.AuthorsPublishedPosts.Any())
                {
                    <div class="standard-card mb-4">
                        <div class="standard-card-header">Posts by Author</div>
                        <div class="standard-card-body post-widget-container">
                            @{
                                int idx = 0;
                                foreach (Post post in Model.AuthorsPublishedPosts)
                                {
                                    if (idx < 5)
                                    {
                                        if (idx > 0)
                                        {
                                            <hr class="post-widget-hr" />
                                        }
                                        idx++;
                                        <div class="post-widget-body">
                                            <a href="/Post/PostDetails/@post.Id">
                                                <img class="post-widget-img" src="data:image/jpg;base64,@Convert.ToBase64String(post.HeaderImage)" alt="@Model.AccountUser.UserName Bio Image" />
                                            </a>
                                            <h5 class="post-widget-body-title"><a href="/Post/PostDetails/@post.Id">@post.Title</a></h5>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }

            <!-- Top Authors -->
            @{
                if (Model.Authors.Any())
                {
                    <div class="standard-card mb-4">
                        <div class="standard-card-header">Notable Authors</div>
                        <div class="standard-card-body post-widget-container">
                            @{
                                int idx = 0;
                                foreach (User author in Model.Authors)
                                {
                                    if (idx < 5 && author.Id != Model.AccountUser.Id)
                                    {
                                        if (idx > 0)
                                        {
                                            <hr class="post-widget-hr" />
                                        }
                                        idx++;
                                        <div class="post-widget-body">
                                            <a href="/Account/Author/@author.Id">
                                                <img class="author-profile-pic-widget" src="data:image/jpg;base64,@Convert.ToBase64String(author.ProfilePicture)" alt="@author.UserName Profile Picture" />
                                            </a>
                                            <div class="post-widget-details">
                                                <h5><a href="/Account/Author/@author.Id">@author.UserName</a></h5>
                                                <p>@author.Heading</p>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }
            <!-- Trending Posts -->
            @{
                if (Model.AuthorsPublishedPosts.Any())
                {
                    <div class="standard-card mb-4">
                        <div class="standard-card-header">Trending Posts</div>
                        <div class="standard-card-body post-widget-container">
                            @{
                                int idx = 0;
                                foreach (Post post in Model.AuthorsPublishedPosts)
                                {
                                    if (idx < 5)
                                    {
                                        if (idx > 0)
                                        {
                                            <hr class="post-widget-hr" />
                                        }
                                        idx++;
                                        <div class="post-widget-body">
                                            <a href="/Post/PostDetails/@post.Id">
                                                <img class="post-widget-img" src="data:image/jpg;base64,@Convert.ToBase64String(post.HeaderImage)" alt="@Model.AccountUser.UserName Bio Image" />
                                            </a>
                                            <h5 class="post-widget-body-title"><a href="/Post/PostDetails/@post.Id">@post.Title</a></h5>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>