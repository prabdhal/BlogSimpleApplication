@using BlogSimple.Model.ViewModels.AccountViewModels;
@model AuthorViewModel;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Author Bio";
    Layout = "~/Views/Home/_HomeLayoutDetails.cshtml";
}

<!-- Page content-->
<div class="container mt-5">
    <div class="home-index-row">
        <div class="blog-col">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4 text-left">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-2">About @Model.AccountUser.UserName</h1>
                    <div class="text-muted fst-italic mb-1">Member since @Model.AccountUser.CreatedOn.ToShortDateString()</div>
