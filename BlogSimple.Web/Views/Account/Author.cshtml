                        @if (Model.AccountUser.TwitterLink != null)
                        {
                            <div class="text-left">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" viewBox="0 0 48 48" fill="none">
                                    <circle cx="24" cy="24" r="20" fill="#1DA1F2" />
